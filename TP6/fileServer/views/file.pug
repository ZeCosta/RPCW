extends layout

block content
    .w3-card-4.w3-margin
        header(class="w3-container w3-teal")
            h3 File #{f.name}

        form.w3-container.w3-margin(class='w3-container')
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Name
                .w3-col.s9.w3-border
                    input.w3-input(type='text' value=f.name readonly)
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Date
                .w3-col.s9.w3-border
                    input.w3-input(type='text' value=f.date readonly)
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Size
                .w3-col.s9.w3-border
                    input.w3-input(type='text' value=f.size readonly)
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Type
                .w3-col.s9.w3-border
                    input.w3-input(type='text' value=f.mimetype readonly)
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    label.w3-text-teal Description
                .w3-col.s9.w3-border
                    input.w3-input(type='text' value=f.description readonly)
            .w3-row.w3-margin-bottom
                .w3-col.s3
                    img.w3-text-teal(src="/fileStore/"+f.name width="400" alt=f.name)
                    a(href="/fileStore/"+f.name download target="_blank") Download!
            button.w3-btn.w3-round-large.w3-left.w3-margin.w3-teal
                a(href='/files') Back to Main Page

        footer(class="w3-container w3-teal")
            address Generated by StudentApp :: #{d}
